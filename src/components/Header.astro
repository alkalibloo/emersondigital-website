---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/apps', label: 'Apps' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-surface/80 backdrop-blur-md border-b border-grid-line">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-accent-cyan to-accent-pink flex items-center justify-center">
          <span class="text-white font-bold text-sm">ED</span>
        </div>
        <span class="font-heading font-semibold text-lg text-text-primary group-hover:text-accent-cyan transition-colors">
          EmersonDigital
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "text-sm font-medium transition-colors relative",
              currentPath === link.href
                ? "text-accent-cyan"
                : "text-text-secondary hover:text-text-primary"
            ]}
          >
            {link.label}
            {currentPath === link.href && (
              <span class="absolute -bottom-1 left-0 right-0 h-0.5 bg-gradient-to-r from-accent-cyan to-accent-pink rounded-full" />
            )}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-text-secondary hover:text-text-primary transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-2">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "px-4 py-2 rounded-lg text-sm font-medium transition-colors",
              currentPath === link.href
                ? "bg-gradient-to-r from-accent-cyan/10 to-accent-pink/10 text-accent-cyan"
                : "text-text-secondary hover:bg-surface hover:text-text-primary"
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
