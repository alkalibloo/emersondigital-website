---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GridBackground from '../../components/GridBackground.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allPosts.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

// Get unique tags
const allTags = [...new Set(sortedPosts.flatMap(post => post.data.tags))];
---

<BaseLayout title="Blog" description="News, insights, and stories from the EmersonDigital team.">
  <!-- Hero Section -->
  <section class="relative py-20 md:py-28 overflow-hidden">
    <GridBackground variant="hero" />

    <div class="container-custom relative z-10">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-bold font-heading mb-6">
          <span class="gradient-text">Blog</span>
        </h1>
        <p class="text-xl text-text-secondary">
          News, insights, and stories from our team. We write about design, development, and the journey of building software.
        </p>
      </div>
    </div>
  </section>

  <!-- Tags Filter -->
  {allTags.length > 0 && (
    <section class="py-8 border-b border-grid-line">
      <div class="container-custom">
        <div class="flex flex-wrap gap-2">
          <span class="text-sm text-text-secondary mr-2">Filter:</span>
          {allTags.map((tag) => (
            <button
              class="tech-badge hover:bg-accent-cyan/20 transition-colors cursor-pointer"
              data-tag={tag}
            >
              {tag}
            </button>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Posts Grid -->
  <section class="py-16 md:py-24">
    <div class="container-custom">
      {sortedPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              date={post.data.date}
              slug={post.slug}
              tags={post.data.tags}
              image={post.data.image}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-text-secondary text-lg">No posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="py-16 md:py-24 bg-surface">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-bold font-heading mb-4">
          Stay in the Loop
        </h2>
        <p class="text-text-secondary mb-6">
          Get notified about new posts, app releases, and other updates from EmersonDigital.
        </p>
        <a href="/contact" class="btn-primary">
          Get Updates
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
