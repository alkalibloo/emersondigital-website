---
import BaseLayout from '../../layouts/BaseLayout.astro';

const features = [
  {
    icon: "üé§",
    title: "Voice-Powered AI",
    description: "Speak naturally to manage your tasks. Say \"Add milk to my grocery list\" or \"What's on my work board?\" and watch it happen in real-time."
  },
  {
    icon: "üß†",
    title: "Understands Context",
    description: "The AI doesn't just transcribe‚Äîit understands. It knows your boards, your tasks, and can intelligently route commands to the right place."
  },
  {
    icon: "üë•",
    title: "Real-Time Collaboration",
    description: "Share boards with your team and see changes sync instantly. Built for both personal productivity and group projects."
  },
  {
    icon: "üéØ",
    title: "Priority System",
    description: "Color-coded priorities (red, yellow, green) with glowing indicators make it instantly clear what needs attention first."
  },
  {
    icon: "üìÇ",
    title: "Organized Boards",
    description: "Group your boards by category‚ÄîHome, Work, Projects. Each board has its own icon, color accent, and task list."
  },
  {
    icon: "üîí",
    title: "Secure by Design",
    description: "Built on AWS with proper authentication. Your data is encrypted and only accessible to you and those you invite."
  },
];

const voiceCommands = [
  { command: "Add milk to my grocery list", result: "Creates a new task on your Grocery board" },
  { command: "What's on my work board?", result: "Reads back all active tasks" },
  { command: "Mark buy milk as done", result: "Completes the matching task" },
  { command: "Create a meeting note on projects", result: "Adds a new task to your Projects board" },
  { command: "Remove eggs from groceries", result: "Deletes the specified task" },
];

const techStack = [
  { name: "TypeScript", description: "Full-stack type safety" },
  { name: "AWS Lambda", description: "Serverless compute" },
  { name: "DynamoDB", description: "Fast NoSQL database" },
  { name: "OpenAI Realtime", description: "Voice AI engine" },
  { name: "WebSocket", description: "Live synchronization" },
  { name: "Cognito", description: "Secure authentication" },
];
---

<BaseLayout
  title="Neon Task Grid"
  description="A voice-powered task management app with real-time AI. Speak naturally to manage your tasks across collaborative boards with a stunning cyberpunk aesthetic."
  theme="dark-neon"
>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-28 overflow-hidden">
    <!-- Animated grid background -->
    <div class="absolute inset-0 grid-background-subtle opacity-60"></div>

    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto">
        <!-- Status badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent-cyan/10 border border-accent-cyan/30 mb-6 neon-pulse">
          <span class="w-2 h-2 bg-accent-cyan rounded-full animate-pulse"></span>
          <span class="text-accent-cyan text-sm font-medium" style="font-family: 'Orbitron', sans-serif;">IN DEVELOPMENT</span>
        </div>

        <div class="flex items-center gap-4 mb-6">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-[#60f2ff] to-[#ff6fbf] flex items-center justify-center text-2xl font-bold text-white shadow-lg" style="box-shadow: 0 0 30px rgba(96, 242, 255, 0.4), 0 0 60px rgba(255, 111, 191, 0.3); font-family: 'Orbitron', sans-serif;">
            NTG
          </div>
        </div>

        <h1 class="text-4xl md:text-6xl font-bold mb-6" style="font-family: 'Orbitron', sans-serif;">
          <span class="gradient-text">Neon Task Grid</span>
        </h1>
        <p class="text-xl text-text-secondary mb-4 max-w-2xl">
          Task management that listens. Speak your tasks into existence with an AI that truly understands what you need.
        </p>
        <p class="text-lg text-accent-cyan mb-8 max-w-2xl">
          <strong>Voice-first.</strong> Just say "Add milk to my grocery list" and it's done.
        </p>

        <div class="flex flex-wrap gap-4">
          <a href="#voice-demo" class="btn-primary">
            See Voice AI in Action
          </a>
          <a href="#features" class="btn-secondary">
            Explore Features
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Voice AI Hero Section -->
  <section id="voice-demo" class="py-16 md:py-24">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: 'Orbitron', sans-serif;">
          <span class="gradient-text">Voice That Gets It</span>
        </h2>
        <p class="text-text-secondary max-w-2xl mx-auto">
          Powered by advanced AI, Neon Task Grid doesn't just hear you‚Äîit understands context, intent, and your personal workflow.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <!-- Voice UI Mockup -->
        <div class="neon-panel p-8 mb-8">
          <div class="flex items-center justify-center gap-3 mb-6">
            <div class="flex items-end gap-1 h-10">
              <div class="waveform-bar"></div>
              <div class="waveform-bar"></div>
              <div class="waveform-bar"></div>
              <div class="waveform-bar"></div>
              <div class="waveform-bar"></div>
            </div>
            <span class="text-accent-cyan text-sm font-mono">LISTENING...</span>
          </div>

          <div class="text-center mb-6">
            <p class="text-2xl text-text-primary font-medium italic">
              "Add pick up dry cleaning to my errands board"
            </p>
          </div>

          <div class="flex justify-center">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#60f2ff] to-[#ff6fbf] flex items-center justify-center cursor-pointer hover:scale-105 transition-transform" style="box-shadow: 0 0 30px rgba(96, 242, 255, 0.5);">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 14c1.66 0 3-1.34 3-3V5c0-1.66-1.34-3-3-3S9 3.34 9 5v6c0 1.66 1.34 3 3 3zm-1-9c0-.55.45-1 1-1s1 .45 1 1v6c0 .55-.45 1-1 1s-1-.45-1-1V5z"/>
                <path d="M17 11c0 2.76-2.24 5-5 5s-5-2.24-5-5H5c0 3.53 2.61 6.43 6 6.92V21h2v-3.08c3.39-.49 6-3.39 6-6.92h-2z"/>
              </svg>
            </div>
          </div>
          <p class="text-center text-text-secondary text-sm mt-4">Hold to speak ‚Ä¢ Release to send</p>
        </div>

        <!-- Example Commands -->
        <div class="grid gap-3">
          {voiceCommands.map((item) => (
            <div class="neon-panel p-4 flex items-center gap-4">
              <div class="text-2xl">üó£Ô∏è</div>
              <div class="flex-1">
                <p class="text-text-primary font-medium">"{item.command}"</p>
                <p class="text-text-secondary text-sm">{item.result}</p>
              </div>
              <div class="text-accent-cyan">‚Üí</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- App UI Preview -->
  <section class="py-16 md:py-24 bg-surface">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: 'Orbitron', sans-serif;">
          <span class="gradient-text">Boards That Glow</span>
        </h2>
        <p class="text-text-secondary max-w-2xl mx-auto">
          A cyberpunk-inspired interface where every task gets its moment to shine.
        </p>
      </div>

      <div class="max-w-5xl mx-auto">
        <!-- App Mockup -->
        <div class="neon-panel p-6 md:p-8">
          <div class="grid md:grid-cols-[250px_1fr] gap-6">
            <!-- Sidebar -->
            <div class="space-y-2">
              <div class="text-text-secondary text-xs uppercase tracking-wider mb-3" style="font-family: 'Orbitron', sans-serif;">Boards</div>

              <div class="p-3 rounded-lg bg-accent-cyan/10 border border-accent-cyan/40 flex items-center gap-3">
                <span class="text-xl">üè†</span>
                <div class="flex-1">
                  <div class="text-text-primary text-sm font-medium">Home</div>
                  <div class="text-text-secondary text-xs">3 tasks</div>
                </div>
              </div>

              <div class="p-3 rounded-lg bg-white/5 border border-white/10 flex items-center gap-3 hover:border-accent-pink/30 transition-colors cursor-pointer">
                <span class="text-xl">üíº</span>
                <div class="flex-1">
                  <div class="text-text-primary text-sm font-medium">Work</div>
                  <div class="text-text-secondary text-xs">7 tasks</div>
                </div>
              </div>

              <div class="p-3 rounded-lg bg-white/5 border border-white/10 flex items-center gap-3 hover:border-accent-pink/30 transition-colors cursor-pointer">
                <span class="text-xl">üõí</span>
                <div class="flex-1">
                  <div class="text-text-primary text-sm font-medium">Groceries</div>
                  <div class="text-text-secondary text-xs">5 tasks</div>
                </div>
              </div>

              <div class="p-3 rounded-lg bg-white/5 border border-white/10 flex items-center gap-3 hover:border-accent-pink/30 transition-colors cursor-pointer">
                <span class="text-xl">üéØ</span>
                <div class="flex-1">
                  <div class="text-text-primary text-sm font-medium">Goals</div>
                  <div class="text-text-secondary text-xs">2 tasks</div>
                </div>
              </div>
            </div>

            <!-- Main Content -->
            <div>
              <div class="flex items-center gap-3 mb-6">
                <span class="text-2xl">üè†</span>
                <h3 class="text-xl font-semibold text-text-primary" style="font-family: 'Orbitron', sans-serif;">Home</h3>
              </div>

              <!-- Task List -->
              <div class="space-y-3">
                <div class="p-4 rounded-lg bg-white/5 border border-white/10 flex items-center gap-4">
                  <span class="priority-dot red"></span>
                  <span class="text-text-primary flex-1">Pick up dry cleaning</span>
                  <button class="px-3 py-1 text-xs rounded bg-accent-cyan/20 text-accent-cyan border border-accent-cyan/30 hover:bg-accent-cyan/30 transition-colors">DONE</button>
                </div>

                <div class="p-4 rounded-lg bg-white/5 border border-white/10 flex items-center gap-4">
                  <span class="priority-dot yellow"></span>
                  <span class="text-text-primary flex-1">Call mom about birthday</span>
                  <button class="px-3 py-1 text-xs rounded bg-accent-cyan/20 text-accent-cyan border border-accent-cyan/30 hover:bg-accent-cyan/30 transition-colors">DONE</button>
                </div>

                <div class="p-4 rounded-lg bg-white/5 border border-white/10 flex items-center gap-4">
                  <span class="priority-dot green"></span>
                  <span class="text-text-primary flex-1">Research new coffee maker</span>
                  <button class="px-3 py-1 text-xs rounded bg-accent-cyan/20 text-accent-cyan border border-accent-cyan/30 hover:bg-accent-cyan/30 transition-colors">DONE</button>
                </div>

                <!-- Add task input -->
                <div class="p-4 rounded-lg border border-dashed border-white/20 flex items-center gap-4 text-text-secondary">
                  <span class="text-xl">+</span>
                  <span class="italic">Add a task...</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <p class="text-center text-text-secondary text-sm mt-4">
          UI preview ‚Ä¢ Actual interface may vary
        </p>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-16 md:py-24">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: 'Orbitron', sans-serif;">
          <span class="gradient-text">Built Different</span>
        </h2>
        <p class="text-text-secondary max-w-2xl mx-auto">
          Not just another task app. Neon Task Grid combines cutting-edge voice AI with a design that makes productivity feel good.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {features.map((feature) => (
          <div class="gradient-border rounded-2xl p-6 transition-all duration-300">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[#60f2ff]/20 to-[#ff6fbf]/20 flex items-center justify-center text-2xl mb-4">
              {feature.icon}
            </div>
            <h3 class="font-semibold text-lg mb-2 text-text-primary" style="font-family: 'Orbitron', sans-serif;">{feature.title}</h3>
            <p class="text-text-secondary text-sm">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How Voice AI Works -->
  <section class="py-16 md:py-24 bg-surface">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center" style="font-family: 'Orbitron', sans-serif;">
          <span class="gradient-text">How Voice AI Works</span>
        </h2>

        <div class="space-y-8">
          <div class="flex gap-6 items-start">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[#60f2ff] to-[#ff6fbf] flex items-center justify-center text-white font-bold flex-shrink-0" style="font-family: 'Orbitron', sans-serif; box-shadow: 0 0 20px rgba(96, 242, 255, 0.3);">
              1
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-2 text-text-primary" style="font-family: 'Orbitron', sans-serif;">Speak Naturally</h3>
              <p class="text-text-secondary">
                Press and hold the microphone button, then talk like you would to a colleague. "Hey, add a reminder to call the dentist to my personal board."
              </p>
            </div>
          </div>

          <div class="flex gap-6 items-start">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[#60f2ff] to-[#ff6fbf] flex items-center justify-center text-white font-bold flex-shrink-0" style="font-family: 'Orbitron', sans-serif; box-shadow: 0 0 20px rgba(96, 242, 255, 0.3);">
              2
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-2 text-text-primary" style="font-family: 'Orbitron', sans-serif;">AI Understands Intent</h3>
              <p class="text-text-secondary">
                The AI parses your request in real-time, identifying the action (add, complete, delete, list), the task content, and which board it belongs to.
              </p>
            </div>
          </div>

          <div class="flex gap-6 items-start">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[#60f2ff] to-[#ff6fbf] flex items-center justify-center text-white font-bold flex-shrink-0" style="font-family: 'Orbitron', sans-serif; box-shadow: 0 0 20px rgba(96, 242, 255, 0.3);">
              3
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-2 text-text-primary" style="font-family: 'Orbitron', sans-serif;">Instant Execution</h3>
              <p class="text-text-secondary">
                Your command executes immediately. The AI confirms with voice feedback, and your boards update in real-time across all your devices.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tech Stack Section -->
  <section class="py-16 md:py-24">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center" style="font-family: 'Orbitron', sans-serif;">
          <span class="gradient-text">Powered By</span>
        </h2>

        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          {techStack.map((tech) => (
            <div class="gradient-border rounded-xl p-4 text-center">
              <div class="font-semibold mb-1 text-text-primary" style="font-family: 'Orbitron', sans-serif;">{tech.name}</div>
              <div class="text-xs text-text-secondary">{tech.description}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-surface">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent-pink/10 border border-accent-pink/30 mb-6">
          <span class="text-accent-pink text-sm font-medium" style="font-family: 'Orbitron', sans-serif;">BETA COMING SOON</span>
        </div>
        <h2 class="text-2xl md:text-3xl font-bold mb-4 text-text-primary" style="font-family: 'Orbitron', sans-serif;">
          Be Among the First
        </h2>
        <p class="text-text-secondary mb-6">
          Neon Task Grid is in active development. Join the waitlist to get early access when we launch the beta.
        </p>
        <a href="/contact" class="btn-primary">
          Join the Waitlist
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
