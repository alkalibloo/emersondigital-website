      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {[1, 2, 3, 4].map((i) => (
          <div class="aspect-[9/16] rounded-2xl bg-gradient-to-br from-accent-cyan/10 to-accent-pink/10 flex items-center justify-center">
            <span class="text-4xl opacity-30">ðŸ“±</span>
