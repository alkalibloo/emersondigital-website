---
import BaseLayout from '../layouts/BaseLayout.astro';
import GridBackground from '../components/GridBackground.astro';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <section class="relative min-h-[70vh] flex items-center overflow-hidden">
    <GridBackground variant="hero" />

    <div class="container-custom relative z-10">
      <div class="max-w-2xl mx-auto text-center">
        <div class="text-8xl mb-6 animate-float">üîç</div>
        <h1 class="text-6xl md:text-8xl font-bold font-heading mb-4">
          <span class="gradient-text">404</span>
        </h1>
        <p class="text-xl text-text-secondary mb-8">
          Oops! The page you're looking for seems to have wandered off into the digital void.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/" class="btn-primary">
            Go Home
          </a>
          <a href="/apps" class="btn-secondary">
            Browse Apps
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
